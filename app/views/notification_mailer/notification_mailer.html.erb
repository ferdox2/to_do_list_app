<h1> Hi <%= @user.name %> this is your weekly report </h1>
<p> Here we show you all your pending tasks </p>

<%= if @user.lists.empty?%>
  <p> Congratulations! You don't have any pending task! </p>
<%= else %>
  <%= @user.lists.each do |list| %>
    <%= if list.tasks.empty? %>
      <p> Congratulations! You don't have any pending tasks! </p>
    <%= else %>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Tittle</th>
            <th>Completed</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <%= list.task.each do |task| %>
              <%= if task.completed == false %>
          <tr>
            <td> <%= task.tittle.titleize() %></td>
            <td> <%= task.description.capitalize() %></td>
          </tr>
              <%= end %>
            <%= end %>
          </tbody>
      </table>
    <%= end %>
  <%= end %>
<%= end %>