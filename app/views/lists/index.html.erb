<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Tittle</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td id='task'><%= link_to list.tittle.titleize(), list_tasks_path(list) %></td>
        <td><%= list.completed %></td>
        <td><%= link_to 'Show', list, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: 'btn btn-outline-primary' %>

