<p id="notice"><%= notice %></p>

<h1><%= @list.tittle.titleize() %></h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Tittle</th>
      <th>Completed</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tittle.titleize() %></td>
        <td><%= task.completed %></td>
        <td><%= task.description %></td>
        <td><%= link_to 'Show', list_task_path([@list.id], task), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_list_task_path([@list.id],task), class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', list_task_path([@list.id],task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_list_task_path, class: 'btn btn-outline-primary' %>
<%= link_to 'Export to PDF', list_path(@list, format: 'pdf'), class: 'btn btn-outline-primary' %>
<%= link_to 'Export to CSV',list_path(@list, format: 'csv'), class: 'btn btn-outline-primary' %>
